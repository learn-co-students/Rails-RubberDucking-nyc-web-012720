<h1>Create-a-Duck 3.0</h1>

<% if flash[:errors] %> 
    <% flash[:errors].each do |error| %>
    <%= error %><br>
    <% end %>
<% end %>

<%= form_for @duck do |f| %>
    <p> Duck Name: <%= f.text_area :name %>
    <p> Duck Description: <%= f.text_area :description %>
    <p> Duck's Owner ID: 
        <%= f.collection_select :student_id, Student.all, :id, :name %>
    <%= f.submit "Make it happen"%>
<% end %>